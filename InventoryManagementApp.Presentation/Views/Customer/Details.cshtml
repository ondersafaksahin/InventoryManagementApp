@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CustomerVM

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h4 class="mb-4">Customer Details</h4>
        <dl class="row mb-0">

            <dt class="col-sm-4">ID</dt>
            <dd class="col-sm-8">@Model.ID</dd>

            <dt class="col-sm-4">Customer Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4 text-truncate">Contact</dt>
            <dd class="col-sm-8">@Model.Contact</dd>

            <dt class="col-sm-4 text-truncate">City</dt>
            <dd class="col-sm-8">@Model.City</dd>

            <dt class="col-sm-4 text-truncate">Address</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4 text-truncate">Phone Number</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4 text-truncate">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4 text-truncate">WebPage</dt>
            <dd class="col-sm-8">@Model.WebPage</dd>

            <dt class="col-sm-4 text-truncate">Created By</dt>
            <dd class="col-sm-8">@Model.CreatedBy</dd>

            <dt class="col-sm-4 text-truncate">Created Date</dt>
            <dd class="col-sm-8">@Model.CreatedDate</dd>

            <dt class="col-sm-4 text-truncate">Modified By</dt>
            <dd class="col-sm-8">@Model.ModifiedBy</dd>

            <dt class="col-sm-4 text-truncate">Modified Date</dt>
            <dd class="col-sm-8">@Model.ModifiedDate</dd>


        </dl>
    </div>
</div>


@model CategoryUpdateVM

<!-- Modal -->

<form method="post" asp-action="CreateSubCategory" asp-controller="Category">
    <div class="form-floating mb-6">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" style="width:120px">Name</span>
            </div>
            <input type="text" class="form-control" asp-for=newSubCategory.SubCategoryName placeholder="Name" aria-label="Name">
        </div>
    </div>

    <div class="form-floating mb-6">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" style="width:120px">Description</span>
            </div>
            <input type="text" class="form-control" asp-for="newSubCategory.Description" placeholder="Description" aria-label="Description">
        </div>
    </div>

    <div class="form-floating mb-6" style="display:none">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" style="width:120px">Category ID</span>
            </div>
            <input type="text" class="form-control" asp-for=newSubCategory.CategoryID readonly placeholder="District" aria-label="District" value=@Model.ID>
        </div>
    </div>


    <button type="submit" class="btn btn-outline-success m-2 float-right">Add SubCategory</button>

</form>


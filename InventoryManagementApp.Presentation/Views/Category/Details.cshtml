@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CategoryVM
<style>
    #checklist {
        list-style-type: none;
        padding: 0;
        background-color: #ffffff;
    }

        #checklist li {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

            #checklist li::before {
                content: "-";
                margin-right: 10px;
                color: #4F29F0; /* Çizgi rengi */
            }

</style>




<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h4 class="mb-4">Category Details</h4>
        <dl class="row mb-0">

            <dt class="col-sm-4">ID</dt>
            <dd class="col-sm-8">@Model.ID</dd>

            <dt class="col-sm-4">Category Name</dt>
            <dd class="col-sm-8">@Model.CategoryName</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4 text-truncate">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>



            <dt class="col-sm-4 text-truncate">Created By</dt>
            <dd class="col-sm-8">@Model.CreatedBy</dd>

            <dt class="col-sm-4 text-truncate">Created Date</dt>
            <dd class="col-sm-8">@Model.CreatedDate</dd>

            <dt class="col-sm-4 text-truncate">Modified By</dt>
            <dd class="col-sm-8">@Model.ModifiedBy</dd>

            <dt class="col-sm-4 text-truncate">Modified Date</dt>
            <dd class="col-sm-8">@Model.ModifiedDate</dd>


            @if (Model.SubCategoryList.Count() > 0)
            {
                <dt class="col-sm-4 text-truncate">SubCategory</dt>
                <dd class="col-sm-8">
                    <ul id="checklist">
                        @foreach (var item in Model.SubCategoryList)
                        {
                            <li>
                                <span>@item.Text</span>
                            </li>
                        }
                    </ul>
                </dd>
            }

        </dl>

    </div>
</div>


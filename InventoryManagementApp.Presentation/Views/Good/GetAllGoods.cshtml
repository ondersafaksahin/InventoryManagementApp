
@{
    ViewData["Title"] = "GetAllGoods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<GoodListVM>

@if (TempData["error"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center" style="margin-bottom:16px">
            <a class="btn btn-success" asp-action="Create" asp-controller="Good">Add Good</a>
        </div>
        <div class="table-responsive">
            <table class="table" id="example">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Status</th>
                        <th scope="col">Code</th>
                        <th scope="col">Name</th>
                        <th scope="col">Stock Amount</th>
                        <th scope="col">Reserved Stock</th>
                        @*<th scope="col">Stocking Unit</th>
                        <th scope="col">Consumption Unit</th>*@
                        <th scope="col">Minimum Stock</th>
                        @*<th scope="col">Tax Percentage</th>*@
                        <th scope="col">List Price</th>
                        @*<th scope="col">List Currency</th>*@
                        <th scope="col">Barcode</th>
                        @*<th scope="col">Gross Weight</th>
                        <th scope="col">Net Weight</th>*@
                        @*<th scope="col">Category Name</th>
                        <th scope="col">Subcategory Name</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Model</th>*@
                        @*                      <th scope="col">Created By</th>
                        <th scope="col">Created Date</th>
                        <th scope="col">Modified By</th>
                        <th scope="col">Modified Date</th>*@
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var good in Model)
                    {
                        <tr>
                            <th scope="row">@good.ID</th>
                            <td>@good.Status</td>
                            <td>@good.Code</td>
                            <td>@good.Name</td>
                            <td>@good.StockAmount</td>
                            <td>@good.ReservedStock</td>
                            @*<td>@good.StockingUnit</td>
                        <td>@good.ConsumptionUnit</td>*@
                            <td>@good.MinStock</td>
                            @*<td>@good.TaxPercentage</td>*@
                            <td>@good.ListPrice</td>
                            @*<td>@good.ListCurrency</td>*@
                            <td>@good.Barcode</td>
                            @*<td>@good.GrossWeight</td>
                        <td>@good.NetWeight</td>*@
                           @* <td>
                                @if (good.Category != null)
                                {
                                    @good.Category.CategoryName
                                }
                                else
                                {
                                    @TempData["error"]
                                    ;
                                }
                            </td>
                            <td>
                                @if (good.SubCategory != null)
                                {
                                    @good.SubCategory.SubCategoryName
                                }
                                else
                                {
                                    @TempData["error"]
                                    ;
                                }
                            </td>
                            <td>
                                @if (good.Brand != null)
                                {
                                    @good.Brand.BrandName
                                }
                                else
                                {
                                    @TempData["error"]
                                    ;
                                }
                            </td>
                            <td>
                                @if (good.Model != null)
                                {
                                    @good.Model.ModelName
                                }
                                else
                                {
                                    @TempData["error"]
                                    ;
                                }
                            </td>*@
                            @*                            <td>@good.CreatedBy</td>
                        <td>@good.CreatedDate</td>
                        <td>@good.ModifiedBy</td>
                        <td>@good.ModifiedDate</td>*@
                            <td class="text-center">
                                <a class="btn pt-0" asp-action="UpdateDetails" asp-controller="Good" asp-route-id="@good.ID" type="button" data-toggle="popover" title="Update">
                                    <i class="far fa-edit" style="color:coral;font-size:20px"></i>
                                </a>
                                <a class="btn pt-0" asp-action="Delete" asp-controller="Good" asp-route-id="@good.ID" type="button" data-toggle="popover" title="Delete">
                                    <i class="far fa-trash-alt" style="color:red;font-size:20px"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(document).ready(function () {
            $('#example').DataTable;
        });
    });
</script>
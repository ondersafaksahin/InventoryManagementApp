                                    <option selected>Choose Stock Unit...</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <select class="form-select" id="floatingSelect"
                                        aria-label="Floating label select example" asp-for="@Model.ConsumptionUnit" asp-items="@Html.GetEnumSelectList<UnitType>()">
                                    <option selected>Choose Consumption Unit...</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for=@Model.MinStock placeholder="Minimum  Stock" aria-label="MinStock">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for=@Model.TaxPercentage placeholder="Tax Percentage" aria-label="TaxPercentage">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for=@Model.ListPrice placeholder="List Price" aria-label="ListPrice">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for=@Model.Barcode placeholder="Barcode" aria-label="Barcode">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for=@Model.GrossWeight placeholder="Gross Weight" aria-label="GrossWeight">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for=@Model.NetWeight placeholder="Net Weight" aria-label="NetWeight">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3" id="design">
                                <select class="form-select" id="floatingSelect-design" aria-label="Floating label select example" asp-for="@Model.CategoryID">

@using InventoryManagementApp.Domain.Enums;
@using InventoryManagementApp.Presentation.Models.ViewModels.ModelVMs;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GoodCreateVM

@if (TempData["error"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}
<html>
<head>
    <style>
        #design {
            display: flex;
            align-items: center;
        }

        #floatingSelect-design {
            margin-right: 20px; /* İstenilen boşluğu ayarlayabilirsiniz */
        }

        .button {
            border-radius: 4px;
            background-color: #f4511e;
            border: none;
            color: #FFFFFF;
            text-align: center;
            font-size: 18px;
            padding: 8px;
            width: 180px;
            transition: all 0.5s;
            cursor: pointer;
            margin: 5px;
        }

            .button span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

                .button span:after {
                    content: '\00bb';
                    position: absolute;
                    opacity: 0;
                    top: 0;
                    right: -20px;
                    transition: 0.5s;
                }

            .button:hover span {
                padding-right: 25px;
            }

                .button:hover span:after {
                    opacity: 1;
                    right: 0;
                }
    </style>
</head>
<body>
    <div class="form-floating mb-8 p-4">
        <div id="modalPlaceHolder" class="container-fluid pt-8 px-8">
            <div aria-hidden="true"></div>
            <div class="col-sm-12 col-xl-12">
                <div class="bg-light rounded h-100 p-4">
                    <h4 class="mb-4">Add Good</h4>
                    <form method="post" asp-action="Create" asp-controller="Good">
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" id="GoodName" class="form-control" asp-for=@Model.Name placeholder="Good Name" aria-label="GoodName">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for=@Model.StockAmount placeholder="Stock Amount" aria-label="StockAmount">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for=@Model.ReservedStock placeholder="Reserved Stock" aria-label="ReservedStock">
                            </div>
                        </div>
                        <br />
                        <div class="form-floating mb-6">
                            <div class="input-group mb-3">
                                <select class="form-select" id="floatingSelect"

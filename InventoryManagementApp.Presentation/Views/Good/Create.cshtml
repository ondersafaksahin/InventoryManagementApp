<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        // Category seçiminde değişiklik olduğunda
        $('#floatingSelect-design-category').change(function () {
            var selectedCategoryID = $(this).val(); // Seçilen kategori ID'si

            // AJAX çağrısı ile subcategory verilerini al
            $.ajax({
                url: '/Good/GetSubcategories', // Subcategory verilerini döndüren Action metodunun URL'si
                type: 'GET',
                data: { categoryId: selectedCategoryID },
                success: function (data) {
                    // Başarılı bir şekilde veriler alındığında
                    var subCategorySelect = $('#floatingSelect-design-subCategory');
                    subCategorySelect.empty(); // Mevcut subcategoryleri temizle

                    // Yeni subcategory verilerini ekleyin
                    $.each(data, function (index, item) {
                        subCategorySelect.append($('<option>', {
                            value: item.SubCategoryID,
                            text: item.SubCategoryName
                        }));
                    });
                },
                error: function () {
                    console.error('Subcategory verileri alınamadı.');
                }
            });
        });
    });
</script>



<script>

    var inputValues = {};

    $(document).ready(function () {
        // Modal açıldığında input değerlerini saklayın
        $('#staticBackdrop').on('show.bs.modal', function () {
            console.log('Modal show event fired');
            // Input değerlerini sakla
            inputValues.goodName = $('#GoodName').val();
            inputValues.stockAmount = $('#StockAmount').val();
            // Diğer input alanlarını da aynı şekilde saklayabilirsiniz.
        });

        // Modal kapatıldığında input değerlerini geri yükleyin
        $('#staticBackdrop').on('hidden.bs.modal', function () {
            console.log($('#GoodName').val());
            // Input değerlerini geri yükle
            $('#GoodName').val(inputValues.goodName);
            $('#StockAmount').val(inputValues.stockAmount);
            // Diğer input alanlarını da aynı şekilde geri yükleyebilirsiniz.
        });
    });
</script>




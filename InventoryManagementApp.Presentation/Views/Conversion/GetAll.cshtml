@using InventoryManagementApp.Presentation.Models.ViewModels.ConversionVMs;

@{
    ViewData["Title"] = "GetAllConversions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<ConversionListVM>

@if (TempData["error"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center" style="margin-bottom:16px">
            <a class="btn btn-success" asp-action="Create" asp-controller="Conversion">Add Conversion</a>
        </div>
        <div class="table-responsive">
            <table class="table" id="example">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Good</th>
                        <th scope="col">Status</th>
                        <th scope="col">Base Amount</th>
                        <th scope="col">Base Unit</th>
                        <th scope="col">Final Amount</th>
                        <th scope="col">Final Unit</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var conversion in Model)
                    {
                        <tr>
                            <th scope="row">@conversion.ID</th>
                            <td>@conversion.Good</td>
                            <td>@conversion.Status</td>
                            <td>@conversion.BaseGoodAmount</td>
                            <td>@conversion.BaseUnit</td>
                            <td>@conversion.FinalGoodAmount</td>
                            <td>@conversion.FinalUnit</td>
                            <td class="text-center">
                                <a class="btn pt-0" asp-action="Update" asp-controller="Conversion" asp-route-id="@conversion.ID" type="button" data-toggle="popover" title="Update">
                                    <i class="far fa-edit" style="color:coral;font-size:20px"></i>
                                </a>
                                <a class="btn pt-0" asp-action="Delete" asp-controller="Conversion" asp-route-id="@conversion.ID" type="button" data-toggle="popover" title="Delete" asp-route-active=false>
                                    <i class="far fa-trash-alt" style="color:red;font-size:20px"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(document).ready(function () {
            $('#example').DataTable;
        });
    });
</script>

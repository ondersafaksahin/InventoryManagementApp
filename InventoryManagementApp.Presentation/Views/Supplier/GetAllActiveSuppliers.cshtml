@using InventoryManagementApp.Presentation.Models.ViewModels.SupplierVMs

@{
    ViewData["Title"] = "GetAllSuppliers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<SupplierListVM>

@if (TempData["error"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center" style="margin-bottom:16px">
            <a class="btn btn-success" asp-action="Create" asp-controller="Supplier">Add Supplier</a>
        </div>
        <div class="table-responsive">
            <table class="table" id="example">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Status</th>
                        <th scope="col">Name</th>
                        <th scope="col">City</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <th scope="row">@supplier.ID</th>
                            <td>@supplier.Status</td>
                            <td>@supplier.Name</td>
                            <td>@supplier.City</td>
                            <td>@supplier.PhoneNumber</td>
                            <td>@supplier.Email</td>
                            <td class="text-center">
                                <a class="btn pt-0" asp-action="UpdateDetails" asp-controller="Supplier" asp-route-id="@supplier.ID" type="button" data-toggle="popover" title="Update">
                                    <i class="far fa-edit" style="color:coral;font-size:20px"></i>
                                </a>
                                <a class="btn pt-0" asp-action="Delete" asp-controller="Supplier" asp-route-id="@supplier.ID" type="button" data-toggle="popover" title="Delete" asp-route-active=true>
                                    <i class="far fa-trash-alt" style="color:red;font-size:20px"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(document).ready(function () {
            $('#example').DataTable;
        });
    });
</script>

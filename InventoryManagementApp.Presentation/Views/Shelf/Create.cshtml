@using InventoryManagementApp.Presentation.Models.ViewModels.ShelfVMs;
@{
    ViewData["Title"] = "Create";
}

 @model ShelfCreateVM
 
<div class="form-floating mb-8 p-4">
    <div class="container-fluid pt-8 px-8">

        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h4 class="mb-4">Add Shelf</h4>
                <form method="post" asp-action="Create" asp-controller="Shelf">
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" asp-for=Name placeholder="Name" aria-label="NameOfWarehouse">
                        </div>
                    </div>
                    <br />
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" asp-for=Description placeholder="Description" aria-label="Description">
                        </div>
                    </div>
                    <br />
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <select class="form-select" id="floatingSelect" aria-label="Floating label select example" asp-for="@Model.WarehouseID">
                                <option selected value="">Select Warehouse... </option>
                                @foreach (var item in Model.WareHouseList)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-outline-success m-2">Add Shelf</button>

                </form>

            </div>
        </div>
    </div>
</div>



@using InventoryManagementApp.Presentation.Models.ViewModels.WarehouseVMs;

@{
    ViewData["Title"] = "GetAllActiveWareHouses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<WarehouseListVM>

@if (TempData["error"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center" style="margin-bottom:16px">
            <a class="btn btn-success" asp-action="Create" asp-controller="Warehouse">Add Warehouse</a>
        </div>
        <div class="table-responsive">
            <table class="table" id="example">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Status</th>
                      @*<th scope="col">Created By</th>
                        <th scope="col">Created Date</th>
                        <th scope="col">Modified By</th>
                        <th scope="col">Modified Date</th>*@
                        <th scope="col">City</th>
                        <th scope="col">District</th>
                        <th scope="col">Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var warehouse in Model)
                    {
                        <tr>
                            <th scope="row">@warehouse.ID</th>
                            <td>@warehouse.Name</td>
                            <td>@warehouse.Status</td>
                          @*<td>@brand.CreatedBy</td>
                            <td>@brand.CreatedDate</td>
                            <td>@brand.ModifiedBy</td>
                            <td>@brand.ModifiedDate</td>*@
                            <td>@warehouse.City</td>
                            <td>@warehouse.District</td>
                            <td>@warehouse.Description</td>
                           
                            <td class="text-center">
                                <a class="btn pt-0" asp-action="UpdateDetails" asp-controller="Warehouse" asp-route-id="@warehouse.ID" type="button" data-toggle="popover" title="Update">
                                <i class="far fa-edit" style="color:coral;font-size:20px"></i>
                                </a>
                                <a class="btn pt-0" asp-action="Delete" asp-controller="Warehouse" asp-route-id="@warehouse.ID" asp-route-active=false type="button" data-toggle="popover" title="Delete">
                                    <i class="far fa-trash-alt" style="color:red;font-size:20px"></i>
                                </a>
                                <a class="btn pt-0" id="addShelf" data-id="@warehouse.ID" type="button" data-bs-toggle="modal" data-bs-target="#staticBackdropShelf" title="Add Shelf">
                                    <i class="fas fa-layer-group" style="color: saddlebrown;font-size:20px"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdropShelf" tabindex="-1" role="dialog" aria-labelledby="shelfCreate" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"> New Shelf</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("ShelfCreate",new WarehouseUpdateVM())
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    $(function () {
        $(document).ready(function () {
            $('#example').DataTable;
        });
    });

    var warehouseId;
    $(document).on("click", "#addShelf", function () {
        warehouseId = $(this).data('id');
    });
    $(document).on("click", "#createShelfSubmit", function () {
        $(".modal-body #warehouseId").val(warehouseId);
    });
</script>

@using InventoryManagementApp.Domain.Enums;
@{
    ViewData["Title"] = "GetAllWarehouses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<WarehouseListVM>

<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">All Warehouses</h6>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Warehouse</th>
                    <th scope="col">Description</th>
                    <th scope="col">City</th>
                    <th scope="col">District</th>
                    <th scope="col">Created By</th>
                    <th scope="col">Created Date</th><th scope="col">Modified By</th><th scope="col">Modified Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Details</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                
                    @foreach (var item in Model)
                    {
                        <tr>
                        <td> <p class="fw-normal mb-1" asp-for="@item.ID">@item.ID</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.Name">@item.Name</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.Description">@item.Description</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.City">@item.City</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.District">@item.District</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.CreatedBy">@item.CreatedBy</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.CreatedDate">@item.CreatedDate</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.ModifiedBy">@item.ModifiedBy</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.ModifiedDate">@item.ModifiedDate</p></td>
                        <td> <p class="fw-normal mb-1" asp-for="@item.Status">@item.Status</p></td>
                        <td>
                            <a asp-action="UpdateDetails" asp-controller="Warehouse" asp-route-id="@item.ID" type="button" class="btn btn-primary m-2">
                                Details
                            </a>
                        </td>

                        <td>
                            <a asp-action="Delete" asp-controller="Warehouse" asp-route-id="@item.ID" type="button" class="btn btn-danger m-2">
                                Delete
                            </a>
                        </td>
                        </tr>
                    }
                    
            </tbody>
        </table>
    </div>
</div>

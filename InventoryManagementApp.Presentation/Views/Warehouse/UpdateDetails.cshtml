@using InventoryManagementApp.Domain.Enums;
@using InventoryManagementApp.Presentation.Models.ViewModels.ShelfVMs;
@{
    ViewData["Title"] = "UpdateDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

@model WarehouseUpdateVM

<meta name="viewport" content="width=device-width, initial-scale=1">

<div class="form-floating mb-8 p-4">
    <div class="container-fluid pt-8 px-8">

        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h4 class="mb-4">Update Warehouse</h4>
                <form method="post" asp-action="UpdateDetails" asp-controller="Warehouse">
                    <div class="form-floating mb-6" style="display:none">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:150px">ID</span>
                            </div>
                            <input type="text" class="form-control" readonly asp-for="@Model.ID" placeholder="ID" aria-label="IDOfWareHouse">
                        </div>
                    </div>
                    <br />
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:150px">Name</span>
                            </div>
                            <input type="text" class="form-control" asp-for=@Model.Name placeholder="Name" aria-label="NameOfWarehouse">
                        </div>
                    </div>
                    <br />
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:150px">City</span>
                            </div>
                            <select class="form-select" id="floatingSelect"
                                    aria-label="Floating label select example" asp-for="@Model.City" asp-items="@Html.GetEnumSelectList<City>()">
                                <option selected>Choose City...</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:150px">District</span>
                            </div>
                            <input type="text" class="form-control" asp-for="@Model.District" placeholder="District" aria-label="District">
                        </div>
                    </div>
                    <br />
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:150px">Description</span>
                            </div>
                            <input type="text" class="form-control" asp-for="@Model.Description" placeholder="Description" aria-label="Description">
                        </div>
                    </div>
                    <br />
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:150px">Status</span>
                            </div>
                            <select class="form-select" asp-for="@Model.Status" asp-items="@Html.GetEnumSelectList<Status>()">
                                <option selected style="display:none">@Model.Status</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="form-floating mb-6">
                        <div class="input-group mb-3" id="design">
                            <a class="btn btn-danger mx-2 form-button" asp-controller="Warehouse" asp-action="ListActive">Cancel</a>
                            <input type="submit" value="Save" class="btn btn-success mx-2 form-button" />
                        </div>
                    </div>
                </form>
            
                <br />

                <!--Shelves List of Warehouse -->
                <div class="accordion" id="shelfAccordeon">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse" aria-expanded="true" aria-controls="collapse">
                                @Model.Name / Shelf List
                            </button>
                        </h2>
                        <div id="collapse" class="accordion-collapse collapse" aria-labelledby="heading" data-bs-parent="#shelfAccordeon">
                            <div class="accordion-body">
                                @if (TempData["error"] is not null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @TempData["error"]
                                    </div>
                                }

                                <!-- Button trigger modal -->
                                <button type="button" class="button" data-toggle="modal" data-target="#staticBackdropShelf" asp-route-id="@Model.ID">
                                    <span>Add Shelf</span>
                                </button>

                                <div class="col-12">
                                    <div class="bg-light rounded h-100 p-4">
                                        <div class="d-flex justify-content-between align-items-center" style="margin-bottom:16px">
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table" id="example">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Name</th>
                                                        <th scope="col">Status</th>
                                                        <th scope="col">Description</th>
                                                        <th class="text-center">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var shelf in Model.Shelves)
                                                    {
                                                        <tr>
                                                            <td id="id">@shelf.ID</td>
                                                            <td id="name">@shelf.Name</td>
                                                            <td id="status">@shelf.Status</td>
                                                            <td id="description">@shelf.Description</td>
                                                            <td class="text-center">
                                                                <a onclick="showInPopup('@Url.Action("UpdateShelf","Warehouse",new {id=shelf.ID},Context.Request.Scheme)')" class="btn pt-0">
                                                                    <i class="far fa-edit" style="color:coral;font-size:20px"></i>
                                                                </a>

                                                                <a class="btn pt-0" asp-action="DeleteShelf" asp-controller="Warehouse" asp-route-id="@shelf.ID" asp-route-warehouseid="@Model.ID" type="button" data-toggle="popover" title="Delete">
                                                                    <i class="far fa-trash-alt" style="color:red;font-size:20px"></i>
                                                                </a>

                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal hide fade" id="staticBackdropShelf" tabindex="-1" role="dialog" aria-labelledby="shelfCreate" aria-hidden="true" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"> New Shelf</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <partial name="ShelfCreate" />
            </div>
          
        </div>
    </div>
</div>


<!-- Modal For Update Shelf-->
<div class="modal hide fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"> Update Shelf</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <partial name="_ShelfUpdate" />
            </div>
        </div>
    </div>
</div>



<script>
    $(function () {
        $(document).ready(function () {
            $('#example').DataTable;
        });
    });

    function showInPopup(url) {
        $.ajax({
            type: "GET",
            url: url,
            success: function (res) {
                $("#exampleModal2 .modal-body").html(res);
                $("#exampleModal2").modal('show');
            }
        })
    };

    var warehouseId = @Model.ID;
    console.log(warehouseId);

    $(document).on("click", "#createShelfSubmit", function () {
        $(".modal-body #warehouseId").val(warehouseId);
    });

</script>







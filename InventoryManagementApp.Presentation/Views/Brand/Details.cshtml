@using InventoryManagementApp.Presentation.Models.ViewModels.BrandVMs;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BrandVM

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h4 class="mb-4">Brand Details</h4>
        <dl class="row mb-0">

            <dt class="col-sm-4 mb-2">ID</dt>
            <dd class="col-sm-8">@Model.ID</dd>

            <dt class="col-sm-4 mb-2">Brand Name</dt>
            <dd class="col-sm-8">@Model.BrandName</dd>

            <dt class="col-sm-4 mb-2">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4 mb-2">Created By</dt>
            <dd class="col-sm-8">@Model.CreatedBy</dd>

            <dt class="col-sm-4 mb-2">Created Date</dt>
            <dd class="col-sm-8">@Model.CreatedDate</dd>

            <dt class="col-sm-4 mb-2">Modified By</dt>
            <dd class="col-sm-8">@Model.ModifiedBy</dd>

            <dt class="col-sm-4 mb-2">Modified Date</dt>
            <dd class="col-sm-8">@Model.ModifiedDate</dd>

        </dl>
    </div>
</div>


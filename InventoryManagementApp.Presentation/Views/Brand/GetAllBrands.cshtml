@using InventoryManagementApp.Presentation.Models.ViewModels.BrandVMs;

@{
    ViewData["Title"] = "GetAllBrands";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<BrandListVM>

@if (TempData["error"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center">
            <h6 style="display:inline" class="mb-4">Brands List</h6>
            <a style="display:inline" class="btn btn-success" asp-action="Create" asp-controller="Brand">Add Brand</a>
        </div>
        <div class="table-responsive">
            <table class="table" id="example">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Status</th>
                        <th scope="col">Created By</th>
                        <th scope="col">Created Date</th>
                        <th scope="col">Modified By</th>
                        <th scope="col">Modified Date</th> 
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model)
                    {
                        <tr>
                            <th scope="row">@brand.ID</th>
                            <td>@brand.Name</td>
                            <td>@brand.Status</td>
                            <td>@brand.CreatedBy</td>
                            <td>@brand.CreatedDate</td>
                            <td>@brand.ModifiedBy</td>
                            <td>@brand.ModifiedDate</td>
                            <td class="btn-group dropend">
                                <button class="btn dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-bars"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" asp-action="Edit" asp-controller="Brand" asp-route-id="@brand.ID"><i class="far fa-edit" style="color:coral"></i></a></li>
                                    <li><a class="dropdown-item" asp-action="Delete" asp-controller="Brand" asp-route-id="@brand.ID"><i class="far fa-trash-alt" style="color:red"></i></a></li>
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
$(function() {
  $(document).ready(function() {
    $('#example').DataTable;
  });
});
</script>


@using InventoryManagementApp.Presentation.Models.ViewModels.BrandVMs;

@{
    ViewData["Title"] = "All Brands";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<BrandListVM>

@if (TempData["error"] is not null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["error"]
    </div>
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <div class="d-flex justify-content-between align-items-center" style="margin-bottom:16px">
            <a class="btn btn-success" asp-action="Create" asp-controller="Brand">Add Brand</a>
        </div>
        <div class="table-responsive">
            <table class="table" id="example">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Status</th>
                        @*<th scope="col">Created By</th>
                        <th scope="col">Created Date</th>
                        <th scope="col">Modified By</th>
                        <th scope="col">Modified Date</th> *@
                        <th class="text-center" scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model)
                    {
                        <tr>
                            <th scope="row">@brand.ID</th>
                            <td>@brand.BrandName</td>
                            <td>@brand.Status</td>
                            @*<td>@brand.CreatedBy</td>
                            <td>@brand.CreatedDate</td>
                            <td>@brand.ModifiedBy</td>
                            <td>@brand.ModifiedDate</td>*@
                            <td class="text-center">
                                <a class="btn pt-0" asp-action="Edit" asp-controller="Brand" asp-route-id="@brand.ID" type="button" data-toggle="popover" title="Update">
                                    <i class="far fa-edit" style="color:coral;font-size:20px"></i>
                                </a>
                                <a class="btn pt-0" asp-action="Details" asp-controller="Brand" asp-route-id="@brand.ID" asp-route-active=true type="button" data-toggle="popover" title="Details">
                                    <i class="fas fa-search" style="color: dodgerblue; font-size: 20px;"></i>
                                </a>
                                <a class="btn pt-0" asp-action="Delete" asp-controller="Brand" asp-route-id="@brand.ID" asp-route-active=false type="button" data-toggle="popover" title="Delete">
                                    <i class="far fa-trash-alt" style="color:red;font-size:20px"></i>
                                </a>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
$(function() {
  $(document).ready(function() {
    $('#example').DataTable;
  });
});
</script>

